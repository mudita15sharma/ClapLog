# ════════════════════════════════════════════════════════
#  ClapLog Environment Variables
#  Copy this file to .env and fill in your values
#  NEVER commit .env to git!
# ════════════════════════════════════════════════════════

# ─── Django Core ──────────────────────────────────────────────────────────────
SECRET_KEY=your-very-long-random-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ─── Database (MySQL) ─────────────────────────────────────────────────────────
DB_NAME=claplog
DB_USER=claplog_user
DB_PASSWORD=your_database_password_here
DB_HOST=localhost
DB_PORT=3306

# ─── Email (Gmail SMTP) ───────────────────────────────────────────────────────
# Use Gmail App Password (NOT your regular Gmail password)
# Setup: Google Account → Security → 2FA → App Passwords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your.email@gmail.com
EMAIL_HOST_PASSWORD=xxxx-xxxx-xxxx-xxxx
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=ClapLog <your.email@gmail.com>

# ─── JWT Authentication ───────────────────────────────────────────────────────
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ─── Frontend ─────────────────────────────────────────────────────────────────
# Used for email verification links
FRONTEND_URL=http://localhost:8501

# ─── CORS ─────────────────────────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=http://localhost:8501,http://127.0.0.1:8501
